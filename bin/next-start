#!/usr/bin/env node

import { resolve } from 'path'
import parseArgs from 'minimist'
import { existsSync } from 'fs'
import moduleAlias from 'module-alias'
import loadConfig from '../server/config'

process.env.NODE_ENV = process.env.NODE_ENV || 'production'

const argv = parseArgs(process.argv.slice(2), {
  alias: {
    h: 'help',
    p: 'port'
  },
  boolean: ['h'],
  default: {
    p: 3000
  }
})

if (argv.help) {
  console.log(`
    Description
      Starts the application in production mode.
      The application should be compiled with \`next build\` first.

    Usage
      $ next start <dir> -p <port>

    <dir> is the directory that contains the compiled .next folder
    created by running \`next build\`.
    If no directory is provided, the current directory will be assumed.

    Options
      --port, -p      A port number on which to start the application
      --help, -h      Displays this message
  `)
  process.exit(0)
}

const dir = resolve(argv._[0] || '.')

// Load config and register aliases if provided
const config = loadConfig(dir)
if (config.alias) {
  const alias = config.alias({ dev: false, env: 'server' }) || {}
  moduleAlias.addAliases(alias)
}

// We need to require server like this. That's because, we need to do it after
// we register aliases.
// If we've imported them, it'll required in the top of the page.
const Server = require('../server').default
const srv = new Server({ dir })

if (!existsSync(resolve(dir, '.next'))) {
  console.error(`> Could not find the '.next' directory! Try building your app with 'next build' before starting the server.`)
  process.exit(1)
}

srv.start(argv.port)
.then(() => {
  if (!process.env.NOW) {
    console.log(`> Ready on http://localhost:${argv.port}`)
  }
})
.catch((err) => {
  console.error(err)
  process.exit(1)
})

